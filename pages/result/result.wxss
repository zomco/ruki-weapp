.item {
  position: relative;
  margin: 5rpx;
}

.item::before {
  display: block;
  padding-top: 56.25%;
  width: 100%;
  content: ''; 
}

.item > .screenshot {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.item > .short {
  position: absolute;
  left: 2rpx;
  bottom: 2rpx;
  padding: 0 4rpx;
  background-color: black;
  color: white;
  font-size: 12px;
}