page {
  background-color: #f6f7f9;
}

page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}

.profile {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  border-bottom: 1rpx solid #ebebed;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  background-color: white;
}

.profile__image {
  width:50px;
  height:50px;
  border-radius:25px;
  margin:5px;
}

.profile__avatar {
  color: #a3a3a3;
}

.profile__name {

}

.settings {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  background-color: white;
}

.setting {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}

.setting:not(first-child) {
  border-top: 1rpx solid #ebebed;
}