page {
  background-color: #f6f7f9;
}

page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}

.profile {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  border-bottom: 1rpx solid #ebebed;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  background-color: white;
}

.profile__login {
  background-color: transparent;
  display: flex;
  padding: 0;
  margin: 0;
}

.profile__image {
  width:50px;
  height:50px;
  border-radius:25px;
  margin:5px;
}

.profile__avatar {
  color: #a3a3a3;
}

.profile__name {

}

.videos {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  background-color: white;
}

.video {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.video:not(first-child) {
  border-top: 1rpx solid #ebebed;
}

.video__header {
  display: flex;
  justify-content: space-between;
}

.video__action {
  color: #d9d9d9;
}

.video__body {
  white-space:nowrap;
}

.video__content {
  width: 35%;
  display:inline-block;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.video__title {
  font-size: 20rpx;
  overflow: hidden;
  line-height: 28rpx;
  max-height: 54rpx;
}

.video__aspect {
  position: relative;
  border: 1px solid #d9d9d9;
}

.video__aspect::before {
  display: block;
  padding-top: 56.25%;
  width: 100%;
  content: ''; 
}

.video__poster {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: #3e3a39;
}


.settings {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  background-color: white;
}

.setting {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}

.setting:not(first-child) {
  border-top: 1rpx solid #ebebed;
}