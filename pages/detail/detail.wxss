.copy {
  margin: 0 auto;
  padding: 15px 0;
  width: 60%;
}

.item {
  position: relative;
  margin: 5rpx;
}

.item::before {
  display: block;
  padding-top: 56.25%;
  width: 100%;
  content: ''; 
}

.item > .screenshot {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
