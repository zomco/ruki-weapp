page {
  background-color: #f6f7f9;
}

page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}

.buttons {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 40rpx;
}

.submit__button {
  background-color: #f8b62d!important;
  width: 220rpx;
  height: 60rpx;
  color: white;
  font-size: 26rpx;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.reset__button {
  background-color: white!important;
  width: 220rpx;
  height: 60rpx;
  color: black;
  font-size: 26rpx;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.aspect {
  position: relative;
  border: 1px solid #d9d9d9;
}

.aspect::before {
  display: block;
  padding-top: 56.25%;
  width: 100%;
  content: ''; 
}

.uploader__cover {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #d9d9d9;
}

.fail__bg {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
  background-color: #3e3a39;
}

.fail__cover {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #d9d9d9;
  z-index: 2;
}

.loader__bg {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
}

.loader__cover {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  z-index: 2;
  font-size: 40rpx;
}

.success__bg {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
}

.location {
  overflow: hidden;
}

.title {
  overflow: hidden;
}

.popup {
  background-color:#fff;
  line-height:1.41176471;
  font-size:17px;
  padding:10px 15px;
}
