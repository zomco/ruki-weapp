<view class="page">
  <view class="page__hd">
      <view class="page__title">输入车牌</view>
      <view class="page__desc">查询出现过车牌号码的行车记录视频。</view>
  </view>
  <view class="page__bd page__bd_spacing">
    <picker
      class="weui-btn"
      mode="multiSelector" 
      bindchange="bindMultiPickerChange" 
      bindcolumnchange="bindMultiPickerColumnChange" 
      value="{{multiIndex}}" 
      range="{{multiArray}}"
    >
      <button type="default">{{multiArray[0][multiIndex[0]]}}·{{multiArray[1][multiIndex[1]]}} {{multiArray[2][multiIndex[2]]}} {{multiArray[3][multiIndex[3]]}} {{multiArray[4][multiIndex[4]]}} {{multiArray[5][multiIndex[5]]}} {{multiArray[6][multiIndex[6]]}}</button>
    </picker>
    <button
      class="weui-btn"
      type="primary"
      loading="{{loading}}"
    >
      查询
    </button>
    <view class="hot">
      <view class="title">热门查询</view>
      <view class="tags">
        <navigator
          class="tag"
          url="/pages/result/result?q={{item}}"
          wx:for="{{tags}}"
          wx:key="index"
        >
          {{item}}
        </navigator>
      </view>
    </view>
  </view>
