.poster {
  position: relative;
}

.poster::before {
  display: block;
  padding-top: 56.25%;
  width: 100%;
  content: ''; 
}

.poster__back {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
}

.poster__bg {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 2;
}

.poster__cover {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: white;
  z-index: 3;
}

.poster__title {
  overflow: hidden;
  text-align: start;
  padding-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 5rpx;
  font-size: 28rpx;
  max-height: 60rpx;
}

.poster__playbtn {
  display: flex;
  justify-content: center;
}

.poster__duration {
  padding: 10rpx;
  display: flex;
  justify-content: flex-end;
}

.loader {
  position: relative;
}

.loader::before {
  display: block;
  padding-top: 56.25%;
  width: 100%;
  content: ''; 
}

.loader__bg {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
  background-color: black;
}

.loader__cover {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: white;
  z-index: 2;
}

.loader__spinner {
  display: flex;
  justify-content: center;
}

.player {
  position: relative;
}

.player::before {
  display: block;
  padding-top: 56.25%;
  width: 100%;
  content: ''; 
}

.player__video {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 3;
}
