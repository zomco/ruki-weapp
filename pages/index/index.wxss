.hot {
  margin-top: 25rpx;
}

.hot > .title {
  color: #cfcfcf;
}

.hot > .tags {
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.hot .tag{
  margin: 15rpx;
  padding: 5rpx;
  border-radius: 10rpx;
  text-align: center;
  background-color: #cfcfcf;
  color: #fff;
  width: 27%;
}

.chars {
  display: -webkit-flex;
  display: flex;
}

.chars > .weui-btn:first-child {
  margin-top: 15px;
}

.keyboard {
  z-index: 9999;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: auto;
  background: #eaf1f9;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
  border-bottom: 1px solid rgba(0, 0, 0, 0.2);
  border-top: 1px solid rgba(0, 0, 0, 0.2);
  padding-bottom: 10px;
}

.keyboard > .weui-btn:first-child {
  margin-top: 15px;
}

.button-active[type="default"]  {
  color: rgba(0, 0, 0, 0.6);
  background-color: #DEDEDE;
}