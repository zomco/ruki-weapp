.hot {
  margin-top: 25rpx;
}

.hot > .title {
  color: #cfcfcf;
}

.hot > .tags {
  margin-top: 10rpx;
  display: flex;
  display: -webkit-flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.hot .tag {
  margin: 15rpx;
  padding: 5rpx;
  border-radius: 10rpx;
  text-align: center;
  background-color: #cfcfcf;
  color: #fff;
  width: 27%;
  font-size: 30rpx;
}

.hot .tips {
  color: #cfcfcf;
  margin-top: 10rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-around;
}

.chars {
  display: -webkit-flex;
  display: flex;
}

.chars > .weui-btn {
  padding: 0 35rpx;
}

.chars > .weui-btn:first-child {
  margin-top: 15px;
}

.chars > .active[type="default"] {
  border-color: #cfcfcf;
}

.keyboard {
  z-index: 9999;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: auto;
  background: #eaf1f9;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  border-bottom: 1px solid rgba(0, 0, 0, 0.2);
  border-top: 1px solid rgba(0, 0, 0, 0.2);
  padding-bottom: 10px;
}

.keyboard > .weui-btn:first-child {
  margin-top: 15px;
}

.ads {
  font-size: 30rpx;
  position: fixed;
  bottom: 200rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  color: rgb(136, 136, 136);
}

