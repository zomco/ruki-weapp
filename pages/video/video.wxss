page {
  background-color: #252934;
}

page,
.page,
.page__bd{
  height: 100%;
}
.page__bd{
  padding-bottom: 0;
}

.video {

}

.video__main {
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 500;
}

.video__bottom {
  margin-top: 420rpx;
  margin-left: 20rpx;
}

.video__meta {
  color: white;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  padding-right: 20rpx;
  border-bottom: 1rpx solid #393d48;
}

.video__actions {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx;
}

.video__action {
  color: #999999;
  margin: 0 20rpx;
}

.video__tags {
  display: flex;
  justify-content: flex-start;
  padding: 20rpx;
}

.video__tag {
  font-size: 20rpx;
  color: #999999;
  margin: 0 4rpx;
}

.video__nearbys {
  color: white;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  padding-right: 20rpx;
  border-bottom: 1rpx solid #393d48;
}

.nearbys {

}

.nearby {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
}

.nearby__poster {
  position: relative;
  flex-basis: 35%;
  flex-shrink: 0;
}

.nearby__poster::before {
  display: block;
  padding-top: 56.25%;
  width: 100%;
  content: ''; 
}

.nearby__poster-cover {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 2;
}

.nearby__poster-bg {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
  background-color: #3e3a39;
}

.nearby__meta {
  margin: 20rpx;
}

.nearby__title {
  overflow: hidden;
  font-size: 24rpx;
  line-height: 30rpx;
  max-height: 60rpx;
}

.nearby__distance {
  color: #999999;
  font-size: 20rpx;
}

.video__social {

}

.video__comments {
  color: white;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  padding-right: 20rpx;
}

.player {
  position: relative;
}

.player::before {
  display: block;
  padding-top: 56.25%;
  width: 100%;
  content: ''; 
}

.player__video {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 3;
}

.ender {
  position: relative;
}

.ender::before {
  display: block;
  padding-top: 56.25%;
  width: 100%;
  content: ''; 
}

.ender__bg {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
}

.ender__cover {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: white;
  z-index: 2;
}

.ender__btn {
  display: flex;
  justify-content: center;
}
