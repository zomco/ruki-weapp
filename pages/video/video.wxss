.video {

}

.video__info {
  background-color: #3e3a39;
  color: white;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.video__actions {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx;
}

.video__action {
  color: #999999;
  margin: 0 20rpx;
}

.player {
  position: relative;
}

.player::before {
  display: block;
  padding-top: 56.25%;
  width: 100%;
  content: ''; 
}

.player__video {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 3;
}

.ender {
  position: relative;
}

.ender::before {
  display: block;
  padding-top: 56.25%;
  width: 100%;
  content: ''; 
}

.ender__bg {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
}

.ender__cover {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: white;
  z-index: 2;
}

.ender__btn {
  display: flex;
  justify-content: center;
}
